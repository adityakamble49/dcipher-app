<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adityakamble49.mcrypt">

    <application
        android:name=".MCryptApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.EncryptActivity"
            android:label="@string/encryption" />
        <activity
            android:name=".ui.DecryptActivity"
            android:label="@string/decryption" />
        <activity
            android:name=".ui.keys.KeyManagerActivity"
            android:label="@string/key_manager" />
    </application>

</manifest>