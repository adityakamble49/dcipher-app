<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.adityakamble49.mcrypt.ui.EncryptActivity">

    <EditText
        android:id="@+id/input_text"
        style="@style/InputText.Decrypt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:hint="@string/decrypt_text_hint"
        android:inputType="text" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <Button
            android:id="@+id/decrypt_button"
            style="@style/ActionButtons.Decrypt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/loaded_key_layout"
            android:layout_gravity="bottom"
            android:text="@string/decrypt_text" />

        <RelativeLayout
            android:id="@+id/loaded_key_layout"
            style="@style/LoadedRSAKeyLayoutDecrypt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="12dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/loaded_key"
                style="@style/LoadedRSAKeyDecrypt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/rsa_key_options"
                android:ellipsize="end"
                android:text="@string/loaded_key_placeholder" />

            <Button
                android:id="@+id/change_rsa_key"
                style="@style/LoadedRSAKeyChangeDecrypt"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:background="?android:attr/selectableItemBackground"
                android:text="@string/change" />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
