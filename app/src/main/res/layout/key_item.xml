<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:foreground="?android:selectableItemBackground"
    android:paddingEnd="16dp"
    android:paddingStart="16dp">

    <TextView
        android:id="@+id/key_pair_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/key_options"
        android:ellipsize="end"
        android:layout_centerVertical="true"
        android:text="@string/key_pair_name_placeholder"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/key_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:layout_centerVertical="true"
        android:contentDescription="@string/key_options"
        app:srcCompat="@drawable/ic_options_more" />

</RelativeLayout>